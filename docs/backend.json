{
  "entities": {
    "Tip": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Tip",
      "type": "object",
      "description": "Represents a single football prediction tip.",
      "properties": {
        "date": {
          "type": "string",
          "description": "The date and time for which the prediction is made.",
          "format": "date-time"
        },
        "match": {
          "type": "object",
          "description": "Details about the match.",
          "properties": {
            "homeTeam": {
              "type": "string"
            },
            "awayTeam": {
              "type": "string"
            },
            "score": {
              "type": "string"
            }
          },
          "required": [
            "homeTeam",
            "awayTeam"
          ]
        },
        "league": {
          "type": "string",
          "description": "The league the match belongs to."
        },
        "prediction": {
          "type": "string",
          "description": "The prediction for the match."
        },
        "odds": {
          "type": "number",
          "description": "The odds for the prediction."
        },
        "result": {
          "type": "string",
          "description": "The outcome of the tip.",
          "enum": [
            "Won",
            "Lost",
            "Pending"
          ]
        }
      },
      "required": [
        "date",
        "match",
        "league",
        "prediction",
        "odds",
        "result"
      ]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/tips/{tipId}",
        "definition": {
          "entityName": "Tip",
          "schema": {
            "$ref": "#/backend/entities/Tip"
          },
          "description": "Stores all prediction tips.",
          "params": [
            {
              "name": "tipId",
              "description": "Unique identifier for each tip document."
            }
          ]
        }
      }
    ]
  }
}
